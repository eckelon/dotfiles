root = true

# Common settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Don't trim trailing whitespaces on MarkDown documents
[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
tab_width = 4
